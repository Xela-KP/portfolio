{% extends "./base.njk" %}
{% block content %}
    <article>
        <h1>{{ title }}</h1>
        <p>
            <small>{{ date | date("MMMM d, yyyy") }}</small>
        </p>
        {% if tags.length %}
            <p class="post-tags">
                Tags:
                {%- for tag in tags -%}
                    <a href="/tags/{{ tag | slug }}/">{{ tag }}</a>
                    {% if not loop.last %}, {% endif %}
                {%- endfor -%}
            </p>
        {% endif %}
        {{ content | safe }}
    </article>
{% endblock %}