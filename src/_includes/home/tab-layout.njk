<div class="tabs" data-tab-container>
    <nav class="tab-nav">
        <button class="tab-button active" data-tab="projects">Projects</button>
        <button class="tab-button" data-tab="about">About</button>
    </nav>

    <div class="tab-content">
        <div class="tab-panel active" data-panel="projects">
            <ul class="project-list">
                {% for project in collections.projects %}
                    <li>
                        <a class="project-card" href="{{ project.url | url }}">
                            <div class="project-content">
                                <h2>{{ project.data.title }}</h2>
                                <p class="project-date">{{ project.date | date("MMMM d, yyyy") }}</p>
                                <p class="project-excerpt">{{ project.data.excerpt }}</p>
                                <span class="read-more">Read more â†’</span>
                            </div>
                            <div class="project-image">
                                <img src="{{ project.data.image | url }}" 
                                    alt="{{ project.data.title }}"
                                    class="static-image">
                                <img src="{{ project.data.gif | url if project.data.gif else project.data.image | url }}" 
                                    alt="{{ project.data.title }}"
                                    class="hover-gif"
                                    loading="lazy">
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="tab-panel" data-panel="about">
            <div class="timeline-container">
                <ul class="timeline-list">
                    <li>
                        <div>Present</div>
                        <p>Mentorship under @HenriKuiper for @zDevOps</p>
                        <p>Open Source Contributor for mfpandas</p>
                        <p>Pursuing IBM zXplore Certifications for z/OS</p>
                    </li>
                    <li>
                        <div>2025</div>
                        <p>AWS Certified Cloud Practitioner</p>
                    </li>
                    <li>
                        <div>2023</div>
                        <p>@WesternUniversity for Computer Science and Software Engineering.</p>
                    </li>
                    <li>
                        <div>2020</div>
                        <p>@UniversityOfToronto for Computer Science and Business Administration.</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>